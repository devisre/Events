package collection;

import java.util.ArrayList;

public class arraylist {

	public static void main(String[] args) {
		ArrayList<String> co=new ArrayList<> ();
        System.out.println(co.isEmpty());//to know that array is empty or not
		co.add("java");
		co.add("hello");
		co.add("eclipse");
		co.add("arraylist");
		System.out.println(co);
		System.out.println(co.get(1));
		co.set(3,"array");//set used to change the element
		co.remove(2);//remove used to remove the element
		co.remove("hello");
        System.out.println(co);
        System.out.println("The Array list="+co.isEmpty());

		}
		
	}


