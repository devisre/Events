package operator;

import java.util.Scanner;

public class arraystring1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	Scanner sc=new Scanner(System.in);
	System.out.println("Your options:");
	System.out.println("Suzuki");
	System.out.println("BMW");
	System.out.println("Hond");
	System.out.println("Kia");
	String car=sc.nextLine();
	String []cars= {"Suzuki","BMW","Honda","Kia"};
	int []price= {400000,5000000,300000,1200000};
	if(cars.equals("Suzuki")) {
		System.out.println(cars[0]+"="+price[0] );
	 }
	else if(cars.equals("BMW")) {
		System.out.println(cars[1]+"="+price[1]);
	}
	else if(cars.equals("Honda")) {
		System.out.println(cars[2]+"="+price[2]);
	}
	else if(cars.equals("Kia")) {
		System.out.println(cars[3]+"="+price[3]);
	}
			
	System.out.println("Enter your budget");
	int a=sc.nextInt();
	if(a<=5000000) {
		System.out.println(cars[0]+"="+price[0]);
		System.out.println(cars[1]+"="+price[1]);
		System.out.println(cars[2]+"="+price[2]);
	    System.out.println(cars[3]+"="+price[3]);
	    }
	
	else if (a<=4999999) {
		System.out.println(cars[0]+"="+price[0]);
		System.out.println(cars[2]+"="+price[2]);
		System.out.println(cars[3]+"="+price[3]);
	}
	else if(a<=1199999) {
		System.out.println(cars[0]+"="+price[0]);
		System.out.println(cars[2]+"="+price[2]);
	}
	else if (a<=399999) {
		System.out.println(cars[2]+"="+price[2]);
	}
	}

}
